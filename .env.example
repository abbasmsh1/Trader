# API Keys (required for live trading)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Exchange configuration
USE_TESTNET=True
DEFAULT_EXCHANGE=binance

# Trading configuration
INITIAL_BALANCE=10000
MAX_ALLOCATION_PERCENT=20
MAX_RISK_PER_TRADE_PERCENT=2
MIN_CASH_RESERVE_PERCENT=15

# System configuration
LOG_LEVEL=INFO
DATA_DIR=./data
DB_PATH=./db/trader.db

# Trading hours (optional, 24/7 trading if not specified)
# Format: HH:MM-HH:MM in UTC
# TRADING_HOURS=09:00-17:00

# Emergency contacts (optional, for notifications)
# EMERGENCY_EMAIL=your_email@example.com
# EMERGENCY_PHONE=+1234567890 